programa
{
	funcao inicio()
	{
		inteiro num1, num2
		
		escreva("Digite o 1° número: ")
		leia(num1)

		escreva("Digite o 2° número: ")
		leia(num2)

		
		se (num1 % num2 == 0) 
		{
			escreva("O 1° número ", num1, ",",  " é multiplo do 2° ", num2, ".")	
		}
		senao
		{
			escreva("O 1° número ", num1, " NÀO é multiplo de 2° ", num2,".")
		}

		escreva("\n")
	}
}

